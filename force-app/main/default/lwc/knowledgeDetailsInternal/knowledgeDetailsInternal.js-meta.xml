<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
    <!-- COMPONENT BASIC INFORMATION                                                              -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
    
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
    
    <masterLabel>Knowledge Details Internal</masterLabel>
    <description>Lightning Web Component for displaying Knowledge articles with Record ID/URL lookup, responsive design, topic navigation, and comprehensive error handling.</description>

    <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
    <!-- SUPPORTED TARGETS                                                                        -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
    
    <targets>
        <!-- Experience Cloud Communities -->
        <target>lightningCommunity__Default</target>
        <target>lightningCommunity__Page</target>
        
        <!-- Lightning Record Pages -->
        <target>lightning__RecordPage</target>
    </targets>

    <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
    <!-- TARGET CONFIGURATIONS                                                                    -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
    
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default,lightning__RecordPage">
            
            <!-- Article Identifier Properties -->
            <property 
                name="recordId" 
                type="String" 
                label="Article Record Id (Version Id)"
                description="Knowledge article version ID for direct lookup. Use when you have the specific record ID. Leave blank if using URL Name lookup."/>
            
            <property 
                name="urlName" 
                type="String" 
                label="Article URL Name"
                description="SEO-friendly URL name for article lookup (e.g., 'how-to-reset-password'). Use when building user-friendly URLs. Leave blank if using Record ID lookup."/>
            
            <!-- Display Configuration Properties -->
            <property 
                name="language" 
                type="String" 
                label="Language Override"
                description="Language code override (e.g., 'nl', 'en_US', 'de'). Defaults to user's language if not specified. Use for multilingual sites."/>
            
            <property 
                name="showTopics" 
                type="Boolean" 
                label="Show Topic Links"
                description="Controls whether topic navigation links are displayed below the article content. Enable for better content discoverability."
                default="false"/>
            
        </targetConfig>
    </targetConfigs>

    <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
    <!-- CAPABILITIES (Future Enhancement Options)                                                -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════ -->
    
    <capabilities>
        <!-- Add capabilities as needed for future enhancements -->
        <!-- <capability>lightning__hasItemApiNames</capability> -->
        <!-- <capability>lightning__hasPageReference</capability> -->
    </capabilities>

</LightningComponentBundle>