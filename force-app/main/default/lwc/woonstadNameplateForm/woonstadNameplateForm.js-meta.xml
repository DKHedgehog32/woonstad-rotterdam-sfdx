<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Woonstad Naamplaatje Form</masterLabel>
    <description>
        Form for requesting a nameplate. Supports Flow prefill, Flow outputs,
        Apex supplier prefill, and deferred validation (banner + red borders).
    </description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <!-- INPUTS -->
            <property name="recordId" type="String" role="inputOnly" label="Account Id"/>
            <property name="nameplateNameIn" type="String" role="inputOnly" label="Naamplaatje Prefill"/>
            <property name="reasonIn" type="String" role="inputOnly" label="Reden Prefill"/>
            <property name="supplierNameIn" type="String" role="inputOnly" label="Leverancier Naam Prefill"/>
            <property name="supplierEmailIn" type="String" role="inputOnly" label="Leverancier Email Prefill"/>
            <property name="supplierNoteIn" type="String" role="inputOnly" label="Toelichting Prefill"/>

            <!-- OUTPUTS -->
            <property name="nameplateName" type="String" role="outputOnly" label="Naam op het naamplaatje"/>
            <property name="reason" type="String" role="outputOnly" label="Reden van opgave"/>
            <property name="supplierName" type="String" role="outputOnly" label="Leverancier naam"/>
            <property name="supplierEmail" type="String" role="outputOnly" label="Leverancier e-mail"/>
            <property name="supplierNote" type="String" role="outputOnly" label="Toelichting voor leverancier"/>
            <property name="invalidVar" type="Boolean" role="outputOnly" label="Invalid Indicator"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>