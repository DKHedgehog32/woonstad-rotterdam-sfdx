<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>

    <masterLabel>Woonstad KC Case Creation Form</masterLabel>
    <description>A component for Woonstad Klantcontact to create a new Case record within a Screen Flow.</description>

    <targets>
        <target>lightning__FlowScreen</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="recordId" type="String" label="Record ID" description="ID of the record the flow is running on (e.g., Account ID)."/>
            <property name="caseId"   type="String" label="Case ID"   description="The ID of the newly created Case." role="outputOnly"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>