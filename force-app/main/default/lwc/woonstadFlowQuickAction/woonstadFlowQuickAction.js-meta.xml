<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Nieuwe Zaak Quick Action</masterLabel>
    <description>
        Quick Action wrapper for Screen_Flow_Create_Update_New_Case_V2. 
        Opens in a Woonstad-branded modal, passing the current recordId to the Flow 
        and closing automatically upon completion.
    </description>
    <targets>
        <target>lightning__RecordAction</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordAction">
            <objects>
                <object>Account</object>
                <object>Case</object>
                <object>Contact</object>
                <object>Knowledge__c</object>
            </objects>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>