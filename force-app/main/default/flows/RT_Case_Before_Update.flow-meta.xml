    <recordLookups>
        <description>On The Wocas Case Status we created a mapping between the Wocas Status and the correct Salesforce status for the Wocas Status.</description>
        <name>Get_Wocas_Case_Status</name>
        <label>Get Wocas Case Status</label>
        <locationX>314</locationX>
        <locationY>695</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Wocas_Case_Status_Found_And_Not_Closed_Status</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Wocas_Status__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.External_Status__c</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <object>Wocas_Case_Status__mdt</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <recordUpdates>
        <description>Update the Case to set the checkbox to &quot;Reopened&quot;</description>
        <name>Update_Reopened_Case</name>
        <label>Update Reopened Case</label>
        <locationX>446</locationX>
        <locationY>395</locationY>
        <connector>
            <targetReference>Decision_Case_Is_Closed_With_External_Status</targetReference>
        </connector>
        <inputAssignments>
            <field>Case_Reopened_Date_and_Time__c</field>
            <value>
                <elementReference>forD_Now</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Case_Reopened__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>452</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Case_Is_Reopened</targetReference>
        </connector>
        <object>Case</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
