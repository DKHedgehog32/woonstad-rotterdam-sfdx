    <assignments>
        <description>Assign the status of the case to Assigned.</description>
        <name>Assign_Case_Status_To_Assigned</name>
        <label>Case Status To Assigned</label>
        <locationX>50</locationX>
        <locationY>350</locationY>
        <assignmentItems>
            <assignToReference>Get_Case.Status</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Assigned</stringValue>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Update_Case</targetReference>
        </connector>
    </assignments>
    <assignments>
        <description>Fill the VarT_FlowElement with &apos;Get_Case&apos; if the Element fails.</description>
        <name>Assign_VarT_FlowElementGet_Case</name>
