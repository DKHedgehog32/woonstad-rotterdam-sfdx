        <locationY>252</locationY>
        <connector>
            <targetReference>Determine_Account_Label</targetReference>
        </connector>
        <flowName>AL_Determine_Account_Type_Based_On_Contract_Role</flowName>
        <inputAssignments>
            <name>varT_AccountId</name>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputAssignments>
    </subflows>
</Flow>
