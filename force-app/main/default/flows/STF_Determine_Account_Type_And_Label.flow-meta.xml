        <locationX>176</locationX>
        <locationY>360</locationY>
        <flowName>AL_Determine_Account_Label_Based_On_Contract_Role</flowName>
        <inputAssignments>
            <name>varT_AccountId</name>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputAssignments>
